@model DemirbaşTakipSistemi.Models.Ariza

@{
    ViewData["Title"] = "Arıza Bildirimi";
}

<div class="container-fluid">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Arıza Bilgileri
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DemirbasId" class="control-label">Demirbaş</label>
                            <select asp-for="DemirbasId" class="form-select" asp-items="ViewBag.DemirbasId">
                                <option value="">-- Demirbaş Seçiniz --</option>
                            </select>
                            <span asp-validation-for="DemirbasId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="5" placeholder="Arıza ile ilgili detaylı açıklama giriniz..."></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 