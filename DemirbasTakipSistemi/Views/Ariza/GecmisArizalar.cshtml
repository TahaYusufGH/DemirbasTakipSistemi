@model IEnumerable<DemirbaşTakipSistemi.Models.Ariza>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Geçmiş Arıza Kayıtları";
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
    var isBilgiIslem = await UserManager.IsInRoleAsync(user, "BilgiIslem");
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fas fa-history me-2"></i> @ViewData["Title"]</h3>
            <div>
                <a asp-action="AcikArizalar" class="btn btn-light me-2">
                    <i class="fas fa-exclamation-triangle me-1"></i> Açık Arızalar
                </a>
                <a asp-action="Create" class="btn btn-light">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Arıza Bildir
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="arizaTable">
                    <thead>
                        <tr>
                            <th>Arıza Tarihi</th>
                            <th>Seri No</th>
                            <th>Envanter</th>
                            <th>Bildiren Personel</th>
                            <th>Birim</th>
                            <th>Oda No</th>
                            <th>Müdür Sicili</th>
                            <th>Çözüm Tarihi</th>
                            <th>Çözen Personel</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var zimmetliPersonel = item.Demirbas.Zimmetler
                                .Where(z => z.IsAktif)
                                .Select(z => z.Personel)
                                .FirstOrDefault();
                            
                            var mudurSicili = zimmetliPersonel?.SicilNo ?? "-";
                            var birim = zimmetliPersonel?.Departman ?? "-";
                            var odaNo = item.Demirbas.Oda?.OdaKodu ?? "-";
                            
                            <tr>
                                <td>@item.ArizaTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>@(item.Demirbas.SeriNo ?? "-")</td>
                                <td>@item.Demirbas.DemirbasKodu - @item.Demirbas.Ad</td>
                                <td>@($"{item.Bildiren.Ad} {item.Bildiren.Soyad}")</td>
                                <td>@birim</td>
                                <td>@odaNo</td>
                                <td>@mudurSicili</td>
                                <td>
                                    @if (item.CozumTarihi.HasValue)
                                    {
                                        @item.CozumTarihi.Value.ToString("dd.MM.yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.CozenPersonel != null)
                                    {
                                        @($"{item.CozenPersonel.Ad} {item.CozenPersonel.Soyad}")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var badgeClass = item.Durum switch
                                        {
                                            "Beklemede" => "bg-warning",
                                            "İncelemede" => "bg-info",
                                            "Çözüldü" => "bg-success",
                                            "İptal" => "bg-secondary",
                                            _ => "bg-primary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@item.Durum</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#arizaTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "order": [[0, "desc"]]
            });
        });
    </script>
}