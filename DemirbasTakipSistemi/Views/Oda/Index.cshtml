@model IEnumerable<DemirbaşTakipSistemi.Models.Oda>
@{
    ViewData["Title"] = "Odalar";
}
<h2>Odalar</h2>
<a class="btn btn-success mb-3" asp-action="Create">Yeni Oda Ekle</a>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th><i class="bi bi-building"></i> Oda Adı</th>
            <th>Sorumlu Personel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td><span class="fw-bold">@item.Ad</span></td>
            <td>@item.SorumluPersonel?.AdSoyad</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 