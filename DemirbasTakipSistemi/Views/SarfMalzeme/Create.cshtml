@model DemirbaşTakipSistemi.Models.SarfMalzeme

@{
    ViewData["Title"] = "Yeni Sarf Malzeme Ekle";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MalzemeKodu" class="control-label"></label>
                            <input asp-for="MalzemeKodu" class="form-control" />
                            <span asp-validation-for="MalzemeKodu" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="control-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Kategori" class="control-label"></label>
                            <input asp-for="Kategori" class="form-control" />
                            <span asp-validation-for="Kategori" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Marka" class="control-label"></label>
                            <input asp-for="Marka" class="form-control" />
                            <span asp-validation-for="Marka" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Model" class="control-label"></label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Birim" class="control-label"></label>
                            <input asp-for="Birim" class="form-control" placeholder="Adet, Kutu, Paket, vb." />
                            <span asp-validation-for="Birim" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MinimumStok" class="control-label"></label>
                            <input asp-for="MinimumStok" class="form-control" type="number" min="0" />
                            <span asp-validation-for="MinimumStok" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MevcutStok" class="control-label"></label>
                            <input asp-for="MevcutStok" class="form-control" type="number" min="0" />
                            <span asp-validation-for="MevcutStok" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 