@model DemirbaşTakipSistemi.Models.Demirbas

@{
    ViewData["Title"] = "Demirbaş Düzenle";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="DemirbasKodu" class="control-label"></label>
                            <input asp-for="DemirbasKodu" class="form-control" />
                            <span asp-validation-for="DemirbasKodu" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ad" class="control-label"></label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Kategori" class="control-label"></label>
                            <input asp-for="Kategori" class="form-control" />
                            <span asp-validation-for="Kategori" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="AlimTarihi" class="control-label"></label>
                            <input asp-for="AlimTarihi" class="form-control" type="date" />
                            <span asp-validation-for="AlimTarihi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Durum" class="control-label"></label>
                            <select asp-for="Durum" class="form-select" asp-items="Html.GetEnumSelectList<DemirbaşTakipSistemi.Models.Enums.DemirbasDurum>()"></select>
                            <span asp-validation-for="Durum" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SeriNo" class="control-label"></label>
                            <input asp-for="SeriNo" class="form-control" />
                            <span asp-validation-for="SeriNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="OdaId" class="control-label">Oda</label>
                            <select asp-for="OdaId" class="form-select" asp-items="ViewBag.OdaId">
                                <option value="">-- Oda Seçiniz --</option>
                            </select>
                            <span asp-validation-for="OdaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 