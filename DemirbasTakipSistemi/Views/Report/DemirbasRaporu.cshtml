@model DemirbaşTakipSistemi.Models.ViewModels.DemirbasRaporViewModel

@{
    ViewData["Title"] = "Demirbaş Raporu";
}

<div class="container-fluid">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="row">
        <!-- Demirbaş Durumları -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    Demirbaş Durumlarına Göre Dağılım
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Durum</th>
                                    <th>Sayı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var durum in Model.DemirbasDurumlari)
                                {
                                    <tr>
                                        <td>@durum.Durum</td>
                                        <td>@durum.Sayi</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td>Toplam</td>
                                    <td>@Model.DemirbasDurumlari.Sum(d => d.Sayi)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Demirbaş Kategorileri -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Kategorilere Göre Dağılım
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Kategori</th>
                                    <th>Sayı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kategori in Model.DemirbasKategorileri)
                                {
                                    <tr>
                                        <td>@kategori.Kategori</td>
                                        <td>@kategori.Sayi</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td>Toplam</td>
                                    <td>@Model.DemirbasKategorileri.Sum(k => k.Sayi)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Oda Dağılımı -->
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-building me-1"></i>
                    Odalara Göre Dağılım
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Oda</th>
                                    <th>Demirbaş Sayısı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var oda in Model.OdaDagilimi)
                                {
                                    <tr>
                                        <td>@oda.OdaAdi</td>
                                        <td>@oda.DemirbasSayisi</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="fw-bold">
                                    <td>Toplam</td>
                                    <td>@Model.OdaDagilimi.Sum(o => o.DemirbasSayisi)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                order: [[1, 'desc']]
            });
        });
    </script>
} 