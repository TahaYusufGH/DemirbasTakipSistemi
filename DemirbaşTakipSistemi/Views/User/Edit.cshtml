@model DemirbaşTakipSistemi.Models.ViewModels.EditUserViewModel
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    var roles = ViewData["Roles"] as IEnumerable<IdentityRole>;
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3><i class="bi bi-pencil"></i> Kullanıcı Düzenle</h3>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="E-posta" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <select asp-for="Role" class="form-select">
                            <option value="">-- Rol Seçiniz --</option>
                            @foreach (var role in roles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        </select>
                        <label asp-for="Role"></label>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Ad" class="form-control" placeholder="Ad" />
                        <label asp-for="Ad"></label>
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Soyad" class="form-control" placeholder="Soyad" />
                        <label asp-for="Soyad"></label>
                        <span asp-validation-for="Soyad" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Şifre" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="form-text">Şifreyi değiştirmek istemiyorsanız boş bırakın.</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x"></i> İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 