@model IEnumerable<DemirbaşTakipSistemi.Models.SarfMalzeme>

@{
    ViewData["Title"] = "Sarf Malzemeler";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="fas fa-boxes me-2"></i> @ViewData["Title"]</h3>
            <div>
                <a asp-action="Create" class="btn btn-light">
                    <i class="fas fa-plus-circle me-1"></i> Yeni Ekle
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="sarfMalzemeTable">
                    <thead>
                        <tr>
                            <th>Kod</th>
                            <th>Ad</th>
                            <th>Kategori</th>
                            <th>Marka</th>
                            <th>Model</th>
                            <th>Mevcut Stok</th>
                            <th>Min. Stok</th>
                            <th>Son Güncelleme</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.MalzemeKodu)</td>
                                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Kategori)</td>
                                <td>@Html.DisplayFor(modelItem => item.Marka)</td>
                                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                                <td>
                                    @{
                                        var stokClass = item.MevcutStok <= item.MinimumStok ? "text-danger fw-bold" : "text-success";
                                    }
                                    <span class="@stokClass">@item.MevcutStok @item.Birim</span>
                                </td>
                                <td>@($"{item.MinimumStok} {item.Birim}")</td>
                                <td>@item.SonGuncelleme.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#sarfMalzemeTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "order": [[1, "asc"]]
            });
        });
    </script>
} 