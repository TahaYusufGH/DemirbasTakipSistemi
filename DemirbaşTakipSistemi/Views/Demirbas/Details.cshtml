@model DemirbaşTakipSistemi.Models.Demirbas
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Demirbaş Detayları";
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
}

<div class="container-fluid">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-4 text-primary">
            <i class="fas fa-laptop me-2"></i>@Model.Ad - Detaylar
        </h1>
        <div>
            @if (isAdmin)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-1"></i> Düzenle
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Listeye Dön
            </a>
        </div>
    </div>

    <div class="row fade-in">
        <div class="col-md-6">
            <div class="card shadow mb-4 detail-card">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-info-circle me-1"></i>Temel Bilgiler
                    </h6>
                </div>
                <div class="card-body">
                    <div class="detail-row">
                        <div class="detail-label">Demirbaş Kodu</div>
                        <div class="detail-value fw-bold">@Model.DemirbasKodu</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Ad</div>
                        <div class="detail-value">@Model.Ad</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Kategori</div>
                        <div class="detail-value">@Model.Kategori</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Seri No</div>
                        <div class="detail-value">@Model.SeriNo</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Durum</div>
                        <div class="detail-value">
                            @{
                                var statusBadgeClass = Model.Durum.ToString() switch
                                {
                                    "Aktif" => "bg-success",
                                    "Arizali" => "bg-warning",
                                    "Hurda" => "bg-danger",
                                    "Bakimda" => "bg-info",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusBadgeClass">@Model.Durum</span>
                        </div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Bulunduğu Oda</div>
                        <div class="detail-value">
                            @if (Model.Oda != null)
                            {
                                <span>@Model.Oda.Ad</span>
                            }
                            else
                            {
                                <span class="text-muted">Belirtilmemiş</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow mb-4 detail-card">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-file-invoice-dollar me-1"></i>Alım Bilgileri
                    </h6>
                </div>
                <div class="card-body">
                    <div class="detail-row">
                        <div class="detail-label">Alım Tarihi</div>
                        <div class="detail-value">@Model.AlimTarihi.ToString("dd.MM.yyyy")</div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-label">Açıklama</div>
                        <div class="detail-value">
                            @if (!string.IsNullOrEmpty(Model.Aciklama))
                            {
                                @Model.Aciklama
                            }
                            else
                            {
                                <span class="text-muted">Açıklama yok</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Zimmetler != null && Model.Zimmetler.Any())
    {
        <div class="card shadow mb-4 slide-in">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-user-check me-1"></i>Zimmet Geçmişi
                </h6>
                <span class="badge bg-primary">@Model.Zimmetler.Count kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered datatable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar-alt me-1"></i>Zimmet Tarihi</th>
                                <th><i class="fas fa-user me-1"></i>Personel</th>
                                <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                <th><i class="fas fa-calendar-check me-1"></i>İade Tarihi</th>
                                <th><i class="fas fa-comment me-1"></i>Açıklama</th>
                                <th><i class="fas fa-cog me-1"></i>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var zimmet in Model.Zimmetler.OrderByDescending(z => z.ZimmetTarihi))
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">@zimmet.ZimmetTarihi.ToString("dd.MM.yyyy")</span>
                                        <div class="small text-muted">@zimmet.ZimmetTarihi.ToString("HH:mm")</div>
                                    </td>
                                    <td>@($"{zimmet.Personel.Ad} {zimmet.Personel.Soyad}")</td>
                                    <td>
                                        @if (zimmet.IsAktif)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">İade Edildi</span>
                                        }
                                    </td>
                                    <td>
                                        @if (zimmet.IadeTarihi.HasValue)
                                        {
                                            <span>@zimmet.IadeTarihi.Value.ToString("dd.MM.yyyy HH:mm")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 150px;" title="@zimmet.Aciklama">
                                            @zimmet.Aciklama
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-controller="Zimmet" asp-action="Details" asp-route-id="@zimmet.Id" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (zimmet.IsAktif)
                                        {
                                            <a asp-controller="Zimmet" asp-action="Iade" asp-route-id="@zimmet.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-undo"></i> İade
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (Model.Arizalar != null && Model.Arizalar.Any())
    {
        <div class="card shadow mb-4 slide-in">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-exclamation-triangle me-1"></i>Arıza Geçmişi
                </h6>
                <span class="badge bg-warning">@Model.Arizalar.Count kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered datatable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar-alt me-1"></i>Tarih</th>
                                <th><i class="fas fa-user me-1"></i>Bildiren</th>
                                <th><i class="fas fa-info-circle me-1"></i>Durum</th>
                                <th><i class="fas fa-comment me-1"></i>Açıklama</th>
                                <th><i class="fas fa-check-circle me-1"></i>Çözüm</th>
                                <th><i class="fas fa-user-cog me-1"></i>Çözen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ariza in Model.Arizalar.OrderByDescending(a => a.ArizaTarihi))
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">@ariza.ArizaTarihi.ToString("dd.MM.yyyy")</span>
                                        <div class="small text-muted">@ariza.ArizaTarihi.ToString("HH:mm")</div>
                                    </td>
                                    <td>@($"{ariza.Bildiren.Ad} {ariza.Bildiren.Soyad}")</td>
                                    <td>
                                        @{
                                            var arizaStatusClass = ariza.Durum switch
                                            {
                                                "Beklemede" => "bg-warning",
                                                "İncelemede" => "bg-info",
                                                "Çözüldü" => "bg-success",
                                                "İptal" => "bg-secondary",
                                                _ => "bg-primary"
                                            };
                                        }
                                        <span class="badge @arizaStatusClass">@ariza.Durum</span>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 150px;" title="@ariza.Aciklama">
                                            @ariza.Aciklama
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(ariza.Cozum))
                                        {
                                            <div class="text-truncate" style="max-width: 150px;" title="@ariza.Cozum">
                                                @ariza.Cozum
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (ariza.CozumTarihi.HasValue && ariza.CozumYapanId != null)
                                        {
                                            <div>@($"{ariza.CozumYapan.Ad} {ariza.CozumYapan.Soyad}")</div>
                                            <div class="small text-muted">@ariza.CozumTarihi.Value.ToString("dd.MM.yyyy")</div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (Model.Bakimlar != null && Model.Bakimlar.Any())
    {
        <div class="card shadow mb-4 slide-in">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-tools me-1"></i>Bakım Geçmişi
                </h6>
                <span class="badge bg-info">@Model.Bakimlar.Count kayıt</span>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered datatable">
                        <thead>
                            <tr>
                                <th><i class="fas fa-calendar-alt me-1"></i>Tarih</th>
                                <th><i class="fas fa-tools me-1"></i>Bakım Türü</th>
                                <th><i class="fas fa-user-cog me-1"></i>Bakım Yapan</th>
                                <th><i class="fas fa-comment me-1"></i>Açıklama</th>
                                <th><i class="fas fa-calendar-plus me-1"></i>Sonraki Bakım</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bakim in Model.Bakimlar.OrderByDescending(b => b.BakimTarihi))
                            {
                                <tr>
                                    <td>
                                        <span class="fw-bold">@bakim.BakimTarihi.ToString("dd.MM.yyyy")</span>
                                        <div class="small text-muted">@bakim.BakimTarihi.ToString("HH:mm")</div>
                                    </td>
                                    <td>@bakim.BakimTuru</td>
                                    <td>@($"{bakim.BakimYapan.Ad} {bakim.BakimYapan.Soyad}")</td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 150px;" title="@bakim.Aciklama">
                                            @bakim.Aciklama
                                        </div>
                                    </td>
                                    <td>
                                        @if (bakim.SonrakiBakimTarihi.HasValue)
                                        {
                                            <span>@bakim.SonrakiBakimTarihi.Value.ToString("dd.MM.yyyy")</span>
                                            @if (bakim.SonrakiBakimTarihi.Value < DateTime.Now)
                                            {
                                                <span class="badge bg-danger ms-2">Gecikmiş</span>
                                            }
                                            else if ((bakim.SonrakiBakimTarihi.Value - DateTime.Now).TotalDays < 30)
                                            {
                                                <span class="badge bg-warning ms-2">Yaklaşıyor</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Belirtilmemiş</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .detail-card {
            border-radius: 8px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .detail-row {
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        .detail-row:last-child {
            border-bottom: none;
        }

        .detail-label {
            font-weight: 600;
            color: #4e73df;
            margin-bottom: 5px;
        }

        .detail-value {
            color: #5a5c69;
        }

        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }

        .slide-in {
            animation: slideIn 0.5s ease-in-out;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.datatable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Turkish.json'
                },
                order: [[0, 'desc']]
            });
        });
    </script>
} 