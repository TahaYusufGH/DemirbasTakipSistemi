@model IEnumerable<DemirbaşTakipSistemi.Models.Demirbas>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Demirbaşlar";
    var user = await UserManager.GetUserAsync(User);
    var isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
}

<div class="container-fluid">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-4 text-primary">
            <i class="fas fa-laptop me-2"></i>@ViewData["Title"]
        </h1>
        @if (isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Yeni Demirbaş Ekle
            </a>
        }
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list me-1"></i>Demirbaş Listesi
            </h6>
            <div>
                <span class="badge bg-success me-1">Aktif</span>
                <span class="badge bg-warning me-1">Arızalı</span>
                <span class="badge bg-danger me-1">Hurda</span>
                <span class="badge bg-info">Bakımda</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="demirbasTable" class="table table-striped table-bordered datatable">
                    <thead>
                        <tr>
                            <th><i class="fas fa-barcode me-1"></i>Kod</th>
                            <th><i class="fas fa-tag me-1"></i>Ad</th>
                            <th><i class="fas fa-folder me-1"></i>Kategori</th>
                            <th><i class="fas fa-building me-1"></i>Marka</th>
                            <th><i class="fas fa-info-circle me-1"></i>Model</th>
                            <th><i class="fas fa-check-circle me-1"></i>Durum</th>
                            <th><i class="fas fa-door-open me-1"></i>Oda</th>
                            <th><i class="fas fa-user me-1"></i>Zimmetli Personel</th>
                            <th><i class="fas fa-cog me-1"></i>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var aktifZimmet = item.Zimmetler?.FirstOrDefault(z => z.IsAktif);
                            <tr class="fade-in">
                                <td>
                                    <span class="fw-bold">@item.DemirbasKodu</span>
                                </td>
                                <td>
                                    <span class="fw-bold">@item.Ad</span>
                                </td>
                                <td>@item.Kategori</td>
                                <td>@item.Marka</td>
                                <td>@item.Model</td>
                                <td>
                                    @{
                                        var badgeClass = item.Durum.ToString() switch
                                        {
                                            "Aktif" => "bg-success",
                                            "Arizali" => "bg-warning",
                                            "Hurda" => "bg-danger",
                                            "Bakimda" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@item.Durum</span>
                                </td>
                                <td>
                                    @if (item.Oda != null)
                                    {
                                        <span>@item.Oda.Ad</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (aktifZimmet != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-check text-success me-2"></i>
                                            <span>@($"{aktifZimmet.Personel.Ad} {aktifZimmet.Personel.Soyad}")</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-user-slash me-1"></i>Zimmetli Değil
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"
                                           data-bs-toggle="tooltip" title="Detaylar">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        @if (isAdmin)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm"
                                               data-bs-toggle="tooltip" title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            if (aktifZimmet == null)
                                            {
                                                <a asp-action="Assign" asp-route-id="@item.Id" class="btn btn-success btn-sm"
                                                   data-bs-toggle="tooltip" title="Zimmetle">
                                                    <i class="fas fa-user-plus"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-action="Return" asp-route-id="@item.Id" class="btn btn-warning btn-sm"
                                                   data-bs-toggle="tooltip" title="İade Al">
                                                    <i class="fas fa-undo"></i>
                                                </a>
                                            }
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm delete-confirm"
                                               data-bs-toggle="tooltip" title="Sil">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // DataTable başlat
            $('#demirbasTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json'
                },
                responsive: true,
                columnDefs: [
                    { responsivePriority: 1, targets: 1 }, // Ad
                    { responsivePriority: 2, targets: 5 }, // Durum
                    { responsivePriority: 3, targets: -1 } // İşlemler
                ]
            });
            
            // Tooltips başlat
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
} 