@model DemirbaşTakipSistemi.Models.DepoIslem
@using DemirbaşTakipSistemi.Models.Enums

@{
    ViewData["Title"] = "Depo İşlemi Düzenle";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="IslemYapanId" />
                <input type="hidden" asp-for="IslemTarihi" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SarfMalzemeId" class="control-label">Sarf Malzeme</label>
                            <select asp-for="SarfMalzemeId" class="form-select" asp-items="ViewBag.SarfMalzemeId"></select>
                            <span asp-validation-for="SarfMalzemeId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="IslemTipi" class="control-label"></label>
                            <select asp-for="IslemTipi" class="form-select" asp-items="Html.GetEnumSelectList<DemirbaşTakipSistemi.Models.Enums.DepoIslemTip>()"></select>
                            <span asp-validation-for="IslemTipi" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Miktar" class="control-label"></label>
                            <input asp-for="Miktar" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Miktar" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TalepEdenId" class="control-label">Talep Eden</label>
                            <select asp-for="TalepEdenId" class="form-select" asp-items="ViewBag.TalepEdenId">
                                <option value="">-- Personel Seçiniz --</option>
                            </select>
                            <span asp-validation-for="TalepEdenId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BelgeNo" class="control-label"></label>
                            <input asp-for="BelgeNo" class="form-control" />
                            <span asp-validation-for="BelgeNo" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Tedarikci" class="control-label"></label>
                            <input asp-for="Tedarikci" class="form-control" />
                            <span asp-validation-for="Tedarikci" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 