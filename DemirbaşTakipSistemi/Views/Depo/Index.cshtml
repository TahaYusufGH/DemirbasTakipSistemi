@model DemirbaşTakipSistemi.Models.ViewModels.DepoViewModel

@{
    ViewData["Title"] = "Depo Yönetimi";
}

<div class="container-fluid">
    <h2>Depo Yönetimi</h2>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-search me-1"></i>
            Demirbaş Arama
        </div>
        <div class="card-body">
            <form asp-action="Search" method="get" class="mb-4">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="seriNo" class="control-label">Seri Numarası</label>
                            <input type="text" name="seriNo" id="seriNo" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="kategori" class="control-label">Demirbaş Kategorisi</label>
                            <select name="kategori" id="kategori" class="form-control" asp-items="ViewBag.Kategoriler">
                                <option value="">-- Seçiniz --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="altKategori" class="control-label">Demirbaş Alt Kategorisi</label>
                            <input type="text" name="altKategori" id="altKategori" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="durum" class="control-label">Durumu</label>
                            <select name="durum" id="durum" class="form-control" asp-items="ViewBag.Durumlar">
                                <option value="">-- Seçiniz --</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="birim" class="control-label">Birimi</label>
                            <input type="text" name="birim" id="birim" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="odaNo" class="control-label">Oda Numarası</label>
                            <select name="odaNo" id="odaNo" class="form-control" asp-items="ViewBag.Odalar">
                                <option value="">-- Seçiniz --</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="odaTuru" class="control-label">Oda Türü</label>
                            <input type="text" name="odaTuru" id="odaTuru" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="sicilNo" class="control-label">Personel Sicili</label>
                            <input type="text" name="sicilNo" id="sicilNo" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="personelAdi" class="control-label">Personel Adı Soyadı</label>
                            <input type="text" name="personelAdi" id="personelAdi" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-9 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search"></i> Ara
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-redo"></i> Temizle
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Depo Demirbaşları
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="depoTable">
                    <thead>
                        <tr>
                            <th>Demirbaş Kodu</th>
                            <th>Seri No</th>
                            <th>Demirbaş Adı</th>
                            <th>Kategori</th>
                            <th>Alt Kategori</th>
                            <th>Durum</th>
                            <th>Oda</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Demirbaslar)
                        {
                            <tr>
                                <td>@item.DemirbasKodu</td>
                                <td>@(item.SeriNo ?? "-")</td>
                                <td>@item.Ad</td>
                                <td>@item.Kategori</td>
                                <td>@(item.Model ?? "-")</td>
                                <td>@item.Durum</td>
                                <td>@(item.Oda?.Ad ?? "-")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i> Düzenle
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#depoTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json'
                }
            });
        });
    </script>
} 