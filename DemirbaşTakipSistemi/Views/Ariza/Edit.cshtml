@model DemirbaşTakipSistemi.Models.Ariza

@{
    ViewData["Title"] = "Arıza Düzenle";
}

<div class="container-fluid py-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i> @ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="DemirbasId" />
                <input type="hidden" asp-for="BildirenId" />
                <input type="hidden" asp-for="ArizaTarihi" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="control-label">Demirbaş</label>
                            <input type="text" value="@ViewBag.DemirbasAdi" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Bildiren</label>
                            <input type="text" value="@ViewBag.BildirenAdi" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label class="control-label">Arıza Tarihi</label>
                            <input type="text" value="@Model.ArizaTarihi.ToString("dd.MM.yyyy HH:mm")" class="form-control" readonly />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Durum" class="control-label"></label>
                            <select asp-for="Durum" class="form-select">
                                <option value="Beklemede">Beklemede</option>
                                <option value="İncelemede">İncelemede</option>
                                <option value="Çözüldü">Çözüldü</option>
                                <option value="İptal">İptal</option>
                            </select>
                            <span asp-validation-for="Durum" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CozenPersonelId" class="control-label">Çözen Personel</label>
                            <select asp-for="CozenPersonelId" class="form-select" asp-items="ViewBag.CozenPersonelId">
                                <option value="">-- Personel Seçiniz --</option>
                            </select>
                            <span asp-validation-for="CozenPersonelId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CozumTarihi" class="control-label"></label>
                            <input asp-for="CozumTarihi" class="form-control" type="datetime-local" />
                            <span asp-validation-for="CozumTarihi" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label asp-for="Aciklama" class="control-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="3" readonly></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Cozum" class="control-label"></label>
                            <textarea asp-for="Cozum" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Cozum" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 